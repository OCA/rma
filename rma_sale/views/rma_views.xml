<odoo>
    <record id="rma_view_form" model="ir.ui.view">
        <field name="name">rma.view.form</field>
        <field name="model">rma</field>
        <field name="inherit_id" ref="rma.rma_view_form" />
        <field name="arch" type="xml">
            <field name="partner_invoice_id" position="after">
                <field name="order_id" options="{'no_create': True}" />
            </field>
            <sheet>
                <field name="picking_id_domain" invisible="1" />
                <field name="move_id_domain" invisible="1" />
                <field name="product_id_domain" invisible="1" />
            </sheet>
            <field name="picking_id" position="attributes">
                <attribute name="domain">picking_id_domain</attribute>
            </field>
            <field name="move_id" position="attributes">
                <attribute name="domain">move_id_domain</attribute>
            </field>
            <field name="product_id" position="attributes">
                <attribute name="domain">product_id_domain</attribute>
            </field>
        </field>
    </record>
</odoo>
