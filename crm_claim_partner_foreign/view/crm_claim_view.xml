<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="crm_claim_form_view_inherited" model="ir.ui.view">
            <field name="name">crm.claim.form.view.inherited</field>
            <field name="model">crm.claim</field>
            <field name="inherit_id" ref="crm_claim.crm_case_claims_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="international"/>
                </xpath>

            </field>
        </record>

        <record id="crm_claim_tree_view_inherited" model="ir.ui.view">
            <field name="name">crm.claim.tree.view.inherited</field>
            <field name="model">crm.claim</field>
            <field name="inherit_id" ref="crm_claim.crm_case_claims_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="international" invisible="True"/>
                 </xpath>
            </field>
        </record>

        <record id="crm_claim_search_view_inherited_xml" model="ir.ui.view">
            <field name="name">crm.claim.search.view.inherited.xml</field>
            <field name="model">crm.claim</field>
            <field name="inherit_id" ref="crm_claim.view_crm_case_claims_filter"/>
            <field name="arch" type="xml">
                <field name="name" string="Claims" position="after">
                    <filter string="International"
                            domain="[('international', '=', 'international')]"/>
                    <filter string="National"
                            domain="[('international', '=', 'national')]"/>
                </field>
                <group expand="0" string="Group By" position="inside">
                    <filter string="Location Type"
                            domain="[]"
                            context="{'group_by':'international'}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
